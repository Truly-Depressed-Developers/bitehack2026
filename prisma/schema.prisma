generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  sessions   Session[]
  messages   Message[]  @relation("UserMessages")
  chats      Chat[]
  businesses Business[]
  swipes     Swipe[]    @relation("UserSwipes")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Business {
  id             String   @id @default(cuid())
  name           String
  description    String
  address        String
  website        String?
  nip            String
  pkd            String
  imageUrl       String?
  logoUrl        String?
  targetAudience String   @default("")
  latitude       Float
  longitude      Float
  createdAt      DateTime @default(now())
  ownerId        String

  adspaces       Adspace[]
  tags           Tag[]
  owner          User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  swipesReceived Swipe[]   @relation("BusinessSwipes")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  businesses Business[]
}

model AdspaceType {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())

  adspaces Adspace[]
}

model Adspace {
  id                String   @id @default(cuid())
  businessId        String
  typeId            String
  name              String
  description       String?
  maxWidth          Int
  maxHeight         Int
  imageUrl          String
  isBarterAvailable Boolean  @default(false)
  pricePerWeek      Float?
  inUse             Boolean  @default(false)
  createdAt         DateTime @default(now())

  business Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  type     AdspaceType @relation(fields: [typeId], references: [id], onDelete: Restrict)
  chats    Chat[]
}

model Chat {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  participants User[]
  adspaces     Adspace[]
  messages     Message[]
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  senderId  String
  content   String
  isRead    Boolean  @default(false)
  timestamp DateTime @default(now())

  chat   Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender User @relation("UserMessages", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@index([senderId])
}

model Swipe {
  id               String   @id @default(cuid())
  swiperId         String
  targetBusinessId String
  direction        String
  createdAt        DateTime @default(now())

  swiper         User     @relation("UserSwipes", fields: [swiperId], references: [id], onDelete: Cascade)
  targetBusiness Business @relation("BusinessSwipes", fields: [targetBusinessId], references: [id], onDelete: Cascade)

  @@unique([swiperId, targetBusinessId])
  @@index([swiperId])
  @@index([targetBusinessId])
}
